{
	"name": "savage-libs",
	"version": "0.0.14",
	"description": "rollup的打包配置，便于统一修改和更新",
	"main": "dist/index.cjs",
	"module": "./dist/index.mjs",
	"files": [
		"dist/index.cjs",
		"dist/index.mjs",
		"dist/main.d.ts",
		"dist/index.cjs.map",
		"dist/index.mjs.map"
	],
	"types": "./dist/main.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"license": "GPL-3.0",
	"homepage": "https://github.com/savage181855",
	"scripts": {
		"dev": "ts-node --esm scripts/dev.ts",
		"build": "ts-node --esm scripts/build.ts",
		"build-dts": "tsc -p tsconfig.build.json && rollup -c rollup.dts.config.js",
		"check": "tsc --incremental --noEmit",
		"lint": "eslint --cache --ext .ts packages/*/{src,__tests__}/**.ts",
		"format": "prettier --write --cache \"**/*.[tj]s?(x)\"",
		"format-check": "prettier --check --cache \"**/*.[tj]s?(x)\"",
		"test": "vitest",
		"test-unit": "vitest -c vitest.unit.config.ts",
		"test-coverage": "vitest -c vitest.unit.config.ts --coverage",
		"commit": "git-cz",
		"prepare": "husky install"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@babel/parser": "^7.22.15",
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@rollup/plugin-alias": "^4.0.3",
		"@rollup/plugin-commonjs": "^24.0.1",
		"@rollup/plugin-json": "^6.0.0",
		"@rollup/plugin-node-resolve": "^15.0.0",
		"@rollup/plugin-replace": "^5.0.2",
		"@rollup/plugin-terser": "^0.4.3",
		"@rollup/plugin-typescript": "^11.1.3",
		"@types/minimist": "^1.2.2",
		"@types/node": "^20.5.6",
		"@types/rollup-plugin-auto-external": "^2.0.2",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"@vitest/coverage-istanbul": "^0.34.3",
		"chalk": "^5.3.0",
		"commitizen": "^4.3.0",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"esbuild": "^0.19.2",
		"esbuild-plugin-polyfill-node": "^0.3.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-tsdoc": "^0.2.17",
		"estree-walker": "^3.0.3",
		"execa": "^4.0.2",
		"husky": "^8.0.3",
		"javascript-obfuscator": "^4.0.0",
		"lerna": "^7.2.0",
		"lint-staged": "^14.0.1",
		"magic-string": "^0.30.3",
		"minimist": "^1.2.8",
		"nodemon": "^3.0.1",
		"nx": "^16.7.4",
		"prettier": "^3.0.3",
		"prettier-eslint": "^15.0.1",
		"pretty-bytes": "^6.1.1",
		"rollup": "^3.2.3",
		"rollup-obfuscator": "^4.0.0",
		"rollup-plugin-auto-external": "^2.0.0",
		"rollup-plugin-dts": "^6.0.0",
		"rollup-plugin-esbuild": "^5.0.0",
		"rollup-plugin-polyfill-node": "^0.12.0",
		"rollup-plugin-typescript2": "^0.34.1",
		"savage-rollup-command": "workspace:^",
		"savage-utils": "^1.0.45",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vitepress": "1.0.0-rc.10",
		"vitest": "^0.34.3"
	}
}
