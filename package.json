{
	"name": "savage-libs",
	"version": "0.0.0",
	"description": "A monorepo that stores all packages published on NPM.",
	"private": true,
	"type": "module",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"license": "GPL-3.0",
	"homepage": "https://github.com/savage181855",
	"scripts": {
		"dev": "tsx scripts/build.ts -w",
		"build": "tsx scripts/build.ts",
		"docs:dev": "tsx scripts/docs --mode dev",
		"docs:build": "tsx scripts/docs --mode build",
		"docs:preview": "tsx scripts/docs --mode preview",
		"create": "tsx scripts/create",
		"readme": "tsx scripts/readme",
		"aliases": "tsx scripts/aliases",
		"check": "tsc --incremental --noEmit",
		"lint": "eslint --cache --ext .ts packages/*/{src,__tests__}/**.ts",
		"format": "prettier --write --cache \"**/*.[tj]s?(x)\"",
		"format-check": "prettier --check --cache \"**/*.[tj]s?(x)\"",
		"test": "vitest",
		"test-unit": "vitest -c vitest.unit.config.ts",
		"test-coverage": "vitest -c vitest.unit.config.ts --coverage",
		"log": "changeset add",
		"versions": "changeset version",
		"release": "pnpm publish -r --no-git-checks",
		"commit": "git-cz",
		"prepare": "husky install"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@changesets/cli": "2.26.2",
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@testing-library/jest-dom": "5.17.0",
		"@testing-library/react": "13.4.0",
		"@ts-type/package-dts": "2.0.8",
		"@types/cross-spawn": "^6.0.3",
		"@types/jest": "^27.5.2",
		"@types/jsdom": "21.1.3",
		"@types/minimist": "^1.2.2",
		"@types/node": "^20.5.6",
		"@types/prompts": "2.4.6",
		"@types/testing-library__jest-dom": "5.9.1",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"@vitejs/plugin-react": "^4.0.4",
		"@vitejs/plugin-vue": "4.3.4",
		"@vitest/coverage-istanbul": "^0.34.3",
		"commitizen": "^4.3.0",
		"cross-spawn": "7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"esbuild": "^0.19.2",
		"esbuild-plugin-clone": "workspace:*",
		"esbuild-plugin-umd": "workspace:*",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "27.2.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-tsdoc": "^0.2.17",
		"estree-walker": "^3.0.3",
		"execa": "^4.0.2",
		"get-port": "7.0.0",
		"happy-dom": "^12.10.3",
		"husky": "^8.0.3",
		"javascript-obfuscator": "^4.0.0",
		"jsdom": "^22.1.0",
		"lint-staged": "^14.0.1",
		"lodash-es": "4.17.21",
		"magic-string": "^0.30.3",
		"minimist": "^1.2.8",
		"open": "9.1.0",
		"picocolors": "1.0.0",
		"prettier": "^3.0.3",
		"prettier-eslint": "^15.0.1",
		"prompts": "2.4.2",
		"rollup": "^3.2.3",
		"savage-tsup": "^0.0.1",
		"tslib": "^2.6.2",
		"tsx": "3.13.0",
		"typedoc": "0.23.15",
		"typedoc-plugin-markdown": "^3.14.0",
		"typescript": "^5.2.2",
		"vite": "4.4.9",
		"vitepress": "1.0.0-rc.10",
		"vitest": "^0.34.3",
		"vue": "^3.3.4",
		"vue-tsc": "1.8.11"
	},
	"dependencies": {
		"picox": "workspace:*",
		"savage-log": "workspace:^",
		"savage-mdtable": "workspace:^",
		"savage-types": "workspace:*",
		"savage-utils": "workspace:*"
	}
}
